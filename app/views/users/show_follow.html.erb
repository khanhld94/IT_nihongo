<% provide(:title, @title) %>
<div class = "container" id="container-margin">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <div id="image_size">
          <%= image_tag @user.avatar %>
        </div>
        <h1><%= @user.user_name %></h1>
        <span><%= link_to "view my profile", @user %></span>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
<!--         <% if @users.any? %>
          <div class="user_avatars" id="image_size">
            <% @users.each do |user| %>
              <%= link_to image_tag user.avatar %>
            <% end %>
          </div>
        <% end %> -->
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= paginate @users %>
      <% end %>
    </div>
  </div>
</div>
